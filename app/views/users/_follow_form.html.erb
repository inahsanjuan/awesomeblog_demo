<div id="follow_form">
    <% unless current_user.following?(@user) %>
        <!-- Follow button -->
        <%= button_to "Follow", current_user.active_relationships.build, class: 'btn btn-success form-control', params: {followed_id: @user.id} %>
    <% else %>
        <!-- Unfollow button -->
        <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),  method: :delete) do |f| %>
            <%= f.submit "Unfollow", class: 'btn btn-default form-control'  %>
        <% end %>
    <% end %>
</div>
