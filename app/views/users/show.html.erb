<%= provide(:title, @user.name) %>

<div class="row">
    <div class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for(@user) %>
                <%= @user.name %>      
            </h1>
        </section>
    </div>
    <div class="col-md-8">
        <h3>Microposts</h3>

        <ul class="microposts">
            <%= render @microposts %>
        </ul>

        <%= will_paginate @microposts %>
    </div>
</div>
