<% unless current_user.voted?(micropost) %>
    <!-- Follow button -->
    <%= button_to current_user.votes.build, class: 'btn btn-warning btn-xs',
                                            params: { micropost_id: micropost.id },
                                            method: :post do %>
        <i class="glyphicon glyphicon-arrow-up"></i>
        Upvote
    <% end %>
<% else %>
    <!-- Unfollow button -->
    <%= button_to vote_path(current_user.votes.find_by(micropost: micropost)), class: 'btn btn-default btn-xs', method: :delete do %>
        <i class="glyphicon glyphicon-arrow-down"></i>
        Downvote
    <% end %>
<% end %>

<%= pluralize(micropost.votes.count, "vote") %>
